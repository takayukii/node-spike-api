{
  "name": "spike-api",
  "version": "0.0.0",
  "description": "An asynchronous client library for the SPIKE REST API.",
  "main": "./lib/spike-api.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run lint && mocha",
    "lint": "jshint lib/*.js test/*.js && echo Lint passed."
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/ynakajima/node-spike-api.git"
  },
  "keywords": [
    "SPIKE",
    "eCommerce",
    "transactions"
  ],
  "author": "Yuhta Nakajima <yuhta.nakajima@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ynakajima/node-spike-api/issues"
  },
  "homepage": "https://github.com/ynakajima/node-spike-api",
  "devDependencies": {
    "mocha": "^2.1.0",
    "chai": "^2.0.0",
    "jshint": "^2.6.0"
  },
  "jshintConfig": {
    "curly": true,
    "eqeqeq": true,
    "freeze": true,
    "indent": 2,
    "newcap": true,
    "quotmark": "single",
    "maxdepth": 3,
    "maxstatements": 15,
    "maxlen": 80,
    "eqnull": true,
    "funcscope": true,
    "node": true,
    "debug": true,
    "devel": true,
    "mocha": true
  }
}
